{
  "manifest_version": 3,
  "name": "ESCode",
  "version": "0.0.1",
  "description": "Make JavaScript work.",

  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["tabs", "activeTab", "scripting", "storage"],
  "host_permissions":["<all_urls>"],

  "minimum_chrome_version": "10.0",

  "chrome_url_overrides": {
    "newtab": "newtab/index.html"
  },

  "devtools_page": "devtools/devtools-page.html",

  "background": {
    "service_worker": "common/background.js"
  },

  "web_accessible_resources": [{
    "resources": ["devtools/injected.js", "devtools/style.css"],
    "matches": ["<all_urls>"]
  }],

  "content_scripts": [
    {
      "matches": ["http://*/**", "https://*/**"],
      "js": [
        "common/content_script.js"
      ]
    }
  ]
}
