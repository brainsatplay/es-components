{
    "components": {
        "app": {
            "style": {
                "background-color": "black",
                "color": "white",
                "font-family": "'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif",
                "width": "100%",
                "height": "100%",
                "overflow": "auto"
            },
            "tagName": "div",
            "components": {
                "devices": {
                    "tagName": "div",
                            "src": "../../../../components/ui/devices/index.esc.json",
                            "overrides": {
                                "connectmode": {
                                    "options": [
                                        {
                                            "value": "BLE",
                                            "show": "selectBLE"
                                        },
                                        {
                                            "value": "USB",
                                            "show": "selectUSB"
                                        }
                                    ]
                                },
                                "selectUSB": {
                                    "options": {
                                        "peanut": "Biocomp Peanut HEG",
                                        "hegduino": "HEGduino",
                                        "hegduinoV1": "HEGduino V1"
                                    }
                                },
                                "selectBLE": {
                                    "options": {
                                        "hegduino":"HEGduino",
                                        "hegduinoV1": "HEGduino V1",
                                        "blueberry2": "Blueberry",
                                        "blueberry": "Blueberry_Legacy"
                                    }
                                },
                                "connect": {
                                    "subprocesses": {
                                        "src": "./scripts/connect/subprocesses.js"
                                    },
                                    "onconnect": {
                                        "src": "./scripts/connect/onConnect.js"
                                    }
                                },
                                "preprocessData": {
                                    "src": "../../../../components/devices/heg/preprocess.js"
                                }
                            }
                },
                "output": {
                    "tagName": "div",
                    "components": {
                        "audio": {
                            "src": "../../../../components/ui/audio/index.esc.json",
                            "overrides": {
                                "sounds": {
                                    "options": [
                                        {
                                            "label": "Kalimba",
                                            "value": {
                                                "src": "../assets/kalimba.wav"
                                            }
                                        },
                                        {
                                            "label": "Phonk",
                                            "value": {
                                                "src": "../assets/phonk.wav"
                                            }
                                        },
                                        {
                                            "label": "Synth Flute",
                                            "value": {
                                                "src": "../assets/synthflute.wav"
                                            }
                                        }
                                    ]
                                }
                            }
                        },
                        "other": {
                            "tagName": "div",
                            "components": {
                                "stats": {
                                    "src": "../../../../components/ui/devices/stats/index.js"
                                },
                                "reset": {
                                    "src": "../../../../components/ui/button.js",
                                    "attributes": {
                                        "innerHTML": "Reset Stats"
                                    }
                                },
                                "waveform": {
                                    "src": "../../../../components/ui/devices/heg/waveform.js"
                                },
                                "csvmenu": {
                                    "src": "../../../../components/drafts/output/csv/menu.js"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "listeners": {
        "app.output.audio.toggle": {
            "app.output.other.waveform.webaudio": true
        },
        "app.devices.connect": {
            "app.devices.preprocessData": true
        },
        "app.devices.preprocessData": {
            "app.output.other.waveform.data": true,
            "app.output.other.stats": true
        },
        "app.output.other.reset": {
            "app.devices.preprocessData.reset": true
        }
    }
}